<body>

<div class="window" id="app">

    <div class="titlebar">
        <span id="hamburger">☰</span>
        <div class="title-btns">
            <button onclick="minimize()">—</button>
            <button onclick="closeApp()">✕</button>
        </div>
    </div>

    <!-- MENU -->
    <div class="menu" id="menuBox">
        <a onclick="toggleTheme()">Toggle Theme</a>
        <a onclick="alert('Help:\n\nSelect a station and use the buttons below to control playback.')">Help</a>
        <a onclick="alert('About:\n\nOnline Radio Player v1.0\nBuilt as a custom project UI demo.')">About</a>
    </div>

    <div class="content">

        <img id="logo" src="https://picsum.photos/600/300?random=1">

        <label>Select Radio Station:</label>
        <select id="stationSelect"></select>

        <div class="controls">

            <img src="https://cdn-icons-png.flaticon.com/512/727/727245.png" id="playBtn" title="Play">
            <img src="https://cdn-icons-png.flaticon.com/512/0/375.png" id="pauseBtn" title="Pause">
            <img src="https://cdn-icons-png.flaticon.com/512/1828/1828778.png" id="stopBtn" title="Stop">
            <img src="https://cdn-icons-png.flaticon.com/512/318/318476.png" id="nextBtn" title="Next Station">

            <img src="https://cdn-icons-png.flaticon.com/512/727/727269.png" id="volumeBtn" title="Volume">
        </div>

        <!-- VOLUME BOX -->
        <div id="volumeBox">
            <input type="range" id="volumeSlider" min="0" max="1" step="0.01" value="0.8">
            <button onclick="mute()">Mute</button>
        </div>

        <div id="status">Current station: None</div>

    </div>
</div>

<script>
/* ------------ APP LOGIC ------------ */

// Station list + random station images
const STATIONS = [
    { name: "Nightride FM — Chillsynth", url: "https://stream.nightride.fm/chillsynth.mp3", img: "https://picsum.photos/600/300?random=11" },
    { name: "Classical Radio — IPR", url: "https://classical-stream.iowapublicradio.org/ClassicalLow.mp3", img: "https://picsum.photos/600/300?random=12" },
    { name: "Prog-House Radio", url: "https://hirschmilch.de:7001/prog-house.mp3", img: "https://picsum.photos/600/300?random=13" },
    { name: "Rozhlas Jazz", url: "https://rozhlas.stream/jazz.mp3", img: "https://picsum.photos/600/300?random=14" },
    { name: "FIPElectro Radio", url: "https://icecast.radiofrance.fr/fipelectro-midfi.mp3", img: "https://picsum.photos/600/300?random=15" }
];

// HTML elements
const stationSelect = document.getElementById("stationSelect");
const logo = document.getElementById("logo");
const statusDiv = document.getElementById("status");
const menuBox = document.getElementById("menuBox");
const volumeBox = document.getElementById("volumeBox");
const volumeSlider = document.getElementById("volumeSlider");
const volumeBtn = document.getElementById("volumeBtn"); // Get the volume button element
const hamburger = document.getElementById("hamburger"); // Get the hamburger button element

// Audio object
const audio = new Audio();
audio.volume = 0.8;

// Populate dropdown
STATIONS.forEach((s, i) => {
    let option = document.createElement("option");
    option.value = i;
    option.textContent = s.name;
    stationSelect.appendChild(option);
});

// Set initial station
setStation(0);

function setStation(index){
    const s = STATIONS[index];
    audio.src = s.url;
    logo.src = s.img;
    statusDiv.textContent = "Current station: " + s.name;
}

stationSelect.addEventListener("change", () => {
    setStation(stationSelect.value);
});

// Controls
document.getElementById("playBtn").onclick = () => audio.play();
document.getElementById("pauseBtn").onclick = () => audio.pause();
document.getElementById("stopBtn").onclick = () => { audio.pause(); audio.currentTime = 0; };
document.getElementById("nextBtn").onclick = () => {
    const r = Math.floor(Math.random() * STATIONS.length);
    stationSelect.value = r;
    setStation(r);
    audio.play();
};

// Volume controls - Use addEventListener and stopPropagation
volumeBtn.addEventListener("click", (e) => {
    e.stopPropagation(); // Prevent this click from bubbling to document and immediately closing the panel
    volumeBox.style.display = volumeBox.style.display === "block" ? "none" : "block";
});

volumeSlider.oninput = () => { audio.volume = volumeSlider.value; };

function mute(){
    audio.muted = !audio.muted;
}

// Hamburger menu - Use addEventListener and stopPropagation
hamburger.addEventListener("click", (e) => {
    e.stopPropagation(); // Prevent this click from bubbling to document and immediately closing the panel
    menuBox.style.display = menuBox.style.display === "block" ? "none" : "block";
});

// Global click listener to close popups when clicking outside
document.addEventListener('click', (e) => {
    // Close volumeBox if open and click is outside of it or its trigger button
    if (volumeBox.style.display === "block") {
        if (!volumeBox.contains(e.target) && e.target !== volumeBtn) {
            volumeBox.style.display = "none";
        }
    }

    // Close menuBox if open and click is outside of it or its trigger button
    if (menuBox.style.display === "block") {
        if (!menuBox.contains(e.target) && e.target !== hamburger) {
            menuBox.style.display = "none";
        }
    }
});

// Toggle theme
function toggleTheme(){
    document.body.classList.toggle("dark");
}

// Close & minimize
function closeApp(){
    document.getElementById("app").style.display = "none";
}

function minimize(){
    document.getElementById("app").style.display =
        document.getElementById("app").style.display === "none" ? "block" : "none";
}
</script>

</body>
</html>

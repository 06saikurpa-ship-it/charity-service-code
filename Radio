    }
    body.dark {
        --bg: #1b1c1f;
        --card: #2a2c32;
        --text: #ffffff;
        --accent: #76a7ff;
        --muted: #bbbbbb;
    }

    body {
        margin: 0;
        background: var(--bg);
        font-family: Arial, Helvetica, sans-serif;
